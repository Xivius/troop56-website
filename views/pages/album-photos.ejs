<!DOCTYPE html>
<html lang="en" id="album-photos">
  <%- include("../partials/head"); %>

  <body>
    <%- include("../partials/header"); %>

    <main id="content">
      <section>
        <h2><%= title %></h2>
        <% if (photos === undefined || photos.mediaItems === undefined) { %>
          <p>
            There was an issue loading the photos.
            Please contact the troop webmaster.
          </p>
        <% } else { %>
          <% photos.mediaItems.forEach((mediaItem) => { %>
            <figure>
              <img src="<%= mediaItem.baseUrl %>"/>
              <figcaption><%= (mediaItem.description) ? mediaItem.description : mediaItem.filename %></figcaption>
            </figure>
          <% }); %>
        <% } %>
      </section>
      <figure class="overlay" aria-hidden="true">
        <img src="">
        <figcaption></figcaption>
      </figure>
    </main>
  </body>
</html>
